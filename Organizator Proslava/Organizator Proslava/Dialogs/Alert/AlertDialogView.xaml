<UserControl x:Class="Organizator_Proslava.Dialogs.Alert.AlertDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Organizator_Proslava.Dialogs.Alert"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Message}" Grid.Row="0"
                   Foreground="{StaticResource Ming}"
                   FontSize="16" FontFamily="Helvetica" FontWeight="DemiBold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextWrapping="Wrap" />

        <Button Content="U redu" Grid.Row="1"
                Command="{Binding Ok}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                Style="{StaticResource loginPageButton}" Background="{StaticResource PowderBlue}"
                HorizontalAlignment="Right" />
    </Grid>
</UserControl>