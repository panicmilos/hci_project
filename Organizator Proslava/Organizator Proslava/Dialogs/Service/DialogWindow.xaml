<Window x:Class="Organizator_Proslava.Dialogs.Service.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organizator_Proslava.Dialogs.Service"
        xmlns:v="clr-namespace:Organizator_Proslava.View"
        mc:Ignorable="d"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed" />

        <CommandBinding Command="ApplicationCommands.Undo" Executed="CommandBinding_Executed_Undo" />
        <CommandBinding Command="ApplicationCommands.Redo" Executed="CommandBinding_Executed_Redo" />
    </Window.CommandBindings>

    <Grid>
        <v:Background Opacity="0.3" />
        <ContentControl Width="{Binding ContentWidth, Mode=OneWay}"
                        Height="{Binding ContentHeight, Mode=OneWay}"
                        x:Name="ContentPresenter" Content="{Binding}" />
    </Grid>
</Window>