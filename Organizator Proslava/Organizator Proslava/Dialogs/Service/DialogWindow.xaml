<Window x:Class="Organizator_Proslava.Dialogs.Service.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organizator_Proslava.Dialogs.Service"
        xmlns:v="clr-namespace:Organizator_Proslava.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Title="{Binding Title}">
    <Grid>
        <v:Background Opacity="0.3" />
        <ContentControl Width="{Binding ContentWidth, Mode=TwoWay}"
                        Height="{Binding ContentHeight, Mode=TwoWay}"
                        x:Name="ContentPresenter" Content="{Binding}" />
    </Grid>
</Window>