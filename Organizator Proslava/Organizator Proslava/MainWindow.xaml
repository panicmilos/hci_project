<Window x:Class="Organizator_Proslava.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organizator_Proslava"
        xmlns:ninject="clr-namespace:Organizator_Proslava.Ninject"
        mc:Ignorable="d"
        Title="PROSLAV.IO" Height="700" Width="900">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed" />

        <CommandBinding Command="ApplicationCommands.Undo" Executed="CommandBinding_Executed_Undo" />
        <CommandBinding Command="ApplicationCommands.Redo" Executed="CommandBinding_Executed_Redo" />
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="F2" Command="{Binding Path=OpenDemo}" />
    </Window.InputBindings>

    <Window.Resources>
        <ninject:ServiceLocator x:Key="ServiceLocator" />
    </Window.Resources>

    <Window.DataContext>
        <Binding Path="MainViewModel" Source="{StaticResource ServiceLocator}" />
    </Window.DataContext>

    <ContentControl Content="{Binding Path=CurrentViewModel}">
    </ContentControl>
</Window>