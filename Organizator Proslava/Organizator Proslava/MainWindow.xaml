<Window x:Class="Organizator_Proslava.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organizator_Proslava"
        mc:Ignorable="d"
        DataContext="{Binding Path=MainViewModel, Source={StaticResource ServiceLocator}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Width="200" Height="100" Background="Green" Content="{Binding Path=SomeText}"></Label>
        <TextBox Text="{Binding Path=User.Name, UpdateSourceTrigger=PropertyChanged}" Margin="283,316,358,66" ></TextBox>
        <TextBox Text="{Binding Path=User.Surname}" Margin="454,316,187,66" ></TextBox>
        <Button Content="Log" Command="{Binding _log}" CommandParameter="{Binding User}" HorizontalAlignment="Left" Margin="283,372,0,0" VerticalAlignment="Top" Width="74" />
        <Button Content="Save" Command="{Binding _save}" CommandParameter="{Binding User}" HorizontalAlignment="Left" Margin="386,372,0,0" VerticalAlignment="Top" Width="74" />
    </Grid>
</Window>